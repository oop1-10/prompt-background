{
  "manifest_version": 3,
  "name": "Prompt Background",
  "version": "1.1.0",
  "description": "Override new tab and live-change background image on ChatGPT/Perplexity.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*"
  ],
  "chrome_url_overrides": {
    "newtab": "/html/newtab.html"
  },
  "options_page": "/html/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*"
      ],
      "js": ["/scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Prompt Background",
    "default_popup": "/html/popup.html"
  }
}
